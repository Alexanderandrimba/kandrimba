Algoritmo CalcularPotencia
	definir base como entero;
	definir indice como entero;
	definir potencia Como Entero;
	Escribir "Ingrese el valor de la base "; 
	leer base; 
	Escribir"ingrese el valor del indice  ";
	leer indice ; 
	potencia= base^indice;
	Escribir"el resultado de la potencia es " potencia;
	
	
FinAlgoritmo
